<h1>New game</h1>
<h2><%= @letters %></h2>
<h2>What is the longest word you can find?</h2>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <input id="original_letters" name="original_letters" type="hidden" value="<%=@letters%>"/>

  <input type="text" name="guess" placeholder="type your word here">

  <button type="submit">Play</button>

</form>
<br>
<%= link_to "Go back", new_path %>
